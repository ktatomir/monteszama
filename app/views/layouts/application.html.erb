<!DOCTYPE html>
<html>
<head>
  <title>Monteszama</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class='container-fluid'>
		<div class="navbar navbar-inverse">
		  <div class="navbar-inner">
		    <%= link_to "MonteSzama", root_path, class: "brand" %>
		    <ul class="nav">
			  <li><%= link_to "Orders", orders_path %></li>
			</ul>
			<ul class="nav pull-right">
				<% if !github_user %>
			  		<li>
					<%= link_to "Log in", login_path %>
					</li>
				<% else %>
					<li class="navbar-text">Logged as <%= github_user.name %></li>
					<li><%= link_to "Log out", logout_path %></li>
				<% end %>
			  </li>
		    </ul>
		  </div>
		</div>
		<div class='row-fluid'>
			<% if flash[:error] %>
				<div class='row-fluid'>
					<div class='span12'>
						<div class='alert alert-danger'>
							<%= flash[:error] %>
						</div>
					</div>
				</div>
			<% elsif flash[:notice] %>
					<div class='row-fluid'>
						<div class='span12'>
							<div class='alert alert-info'>
								<%= flash[:notice] %>
							</div>
						</div>
					</div>
			<% end %>
			<div class='span2'></div>
			<div class='span8'>
				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
