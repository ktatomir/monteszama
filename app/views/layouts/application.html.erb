<!DOCTYPE html>
<html>
<head>
  <title>Monteszama</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
		<% if flash[:error] %>
			<div class='row-fluid'>
				<div class='span12'>
					<div class='alert alert-danger'>
						<%= flash[:error] %>
					</div>
				</div>
			</div>
		<% elsif flash[:notice] %>
				<div class='row-fluid'>
					<div class='span12'>
						<div class='alert'>
							<%= flash[:notice] %>
						</div>
					</div>
				</div>
		<% end %>
	<div class='container-fluid'>
		<div class="navbar navbar-inverse">
		  <div class="navbar-inner">
		    <a class="brand" href="#">MonteSzama</a>
		    <ul class="nav">
			  <li><%= link_to "Log in", new_user_path %></li>
		      <li><%= link_to "Orders", orders_path %></li>
		    </ul>
		  </div>
		</div>
		<div class='row-fluid'>
			<div class='span2'></div>
			<div class='span8'>
				<%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
